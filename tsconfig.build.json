{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
